<p style="color: green"><%= notice %></p>

<div class="groups">
  <% @groups.each do |g| %>
    <div id="<%= dom_id g %>" class="group-container">

      <img src="<%= g.icon %>" alt="<%= g.name %>" class="group-avatar">
      <p>
        <%= link_to g.name, group_expenses_path(g.id) %>
      </p>
      <p>
        Transactions:
        <%= g.total_expenses_count %>
      </p>

    </div>
  <% end %>
</div>

<%= link_to "New group", new_group_path, class: 'btn-tertiary' %>
<%= link_to "Log out", destroy_user_session_path, class: 'btn-tertiary' %>